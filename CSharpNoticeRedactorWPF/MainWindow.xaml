        <TextBox x:Name="MaxLengthCounter" Visibility="Hidden" TextAlignment="Right"  IsReadOnly="True" IsHitTestVisible="False" Background="Black"  BorderThickness="0 0 0 0" Foreground="#FFD800" Margin="665,353,24,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"  Height="26" FontFamily="Lucida Fax" FontSize="16"/>

        <Button Style="{DynamicResource ButtonDeleteNoticeStyle}" Visibility="Hidden" x:Name="ButtonDeleteNotice" Content="Delete Notice" HorizontalAlignment="Left" Margin="328,412,0,0" VerticalAlignment="Top" Width="440" Height="28" Background="#FFD800" FontFamily="Lucida Fax" FontSize="20" Click="ButtonDeleteNotice_Click"/>

        <Button Style="{DynamicResource ButtonDeleteNoticeStyle}"  x:Name="ButtonAddNotice" Content="Add notice" HorizontalAlignment="Left" Margin="10,396,0,0" VerticalAlignment="Top" Width="265" Height="28" Background="#FFD800" FontFamily="Lucida Fax" FontSize="20" Click="ButtonAddNotice_Click"/>

        <ComboBox Style="{DynamicResource ComboBoxSortStylesStyle}" BorderBrush="#FFF800"  x:Name="ComboBoxWithSortStyles" HorizontalAlignment="Left" Text="Select sort type :" Background="Black" Foreground="#FFD800" IsReadOnly="True" IsEditable="True"  Margin="10,429,0,0" VerticalAlignment="Top" Width="307" FontFamily="Lucida Fax" FontSize="14" SelectionChanged="ComboBoxWithSortStyles_SelectionChanged">
            <ComboBoxItem Content="Sort by name(Ascending)" Background="Black" Foreground="#FFD800"></ComboBoxItem>
