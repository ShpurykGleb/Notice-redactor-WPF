        <ListBox Style="{DynamicResource ListBoxWithNoticesStyle}" x:Name="ListBoxWithNotices"  VirtualizingPanel.ScrollUnit="Pixel" Margin="10,50,507,82" SelectionChanged="ListBoxWithNotices_SelectionChanged" BorderThickness="0 0 0 0" Background="Black" Foreground="#FFD800" ItemsSource="{Binding Notices}" SelectedItem="{Binding SelectedNotice}">
