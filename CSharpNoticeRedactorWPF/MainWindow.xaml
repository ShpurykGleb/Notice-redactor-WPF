        <Button Style="{DynamicResource ButtonDeleteNoticeStyle}"  x:Name="ButtonFindNotice" HorizontalAlignment="Left" Margin="277,396,0,0" VerticalAlignment="Top" Width="40" Height="28" Background="#FFD800" Click="ButtonFindNotice_Click"/>
        <Image x:Name="SearchNoticeImage" HorizontalAlignment="Left" IsHitTestVisible="False" Height="22" Margin="286,399,0,0" VerticalAlignment="Top" Width="22" Source="/Images/SearchNotice.png" RenderTransformOrigin="0.382,0.568"/>

    </Grid>
</Window>
